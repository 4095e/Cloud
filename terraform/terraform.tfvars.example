# Example Terraform variables file
# Copy this file to terraform.tfvars and customize the values

# Project configuration
project_name = "cloud-storage"
environment  = "dev"  # dev, staging, prod

# AWS configuration
region = "us-east-1"

# Domain configuration (optional)
# domain_name = "your-domain.com"  # Leave empty to use CloudFront domain

# S3 configuration
s3_force_destroy = true  # Set to false for production

# Cognito configuration
cognito_user_pool_name = "cloud-storage-users"

# DynamoDB configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"  # or "PROVISIONED"

# API Gateway configuration
api_gateway_stage = "v1"

# Lambda configuration
lambda_runtime     = "nodejs18.x"
lambda_memory_size = 256
lambda_timeout     = 30

# Tags (optional)
tags = {
  Project     = "cloud-storage"
  Environment = "dev"
  Owner       = "your-name"
  CostCenter  = "engineering"
}